/* pages/user2/user2.wxss */
.bg1 {
    position: absolute;
    left: 0rpx;
    top:0rpx;
    width: 750rpx;
    height: calc(1500 / 10150 *750rpx);
    z-index: -1;
  }

  page {
    padding-bottom: 150rpx;
    background-color: #f3f5f9;
}

.user_info_wrap {
    /* background-color: #fff; */
    /* height: 39vh; */
    /* overflow: hidden; */
    position: relative;
}

.user_info_wrap .user_img_wrap {
    position: relative;
}

.user_info_wrap .user_img_wrap .user_bg {
    width: 50%;
    height: 39vh;
    filter: blur(1500rpx);
}

.user_info_wrap .user_img_wrap .user_info {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 25%;
    text-align: center;
}

.user_info_wrap .user_img_wrap .user_info .user_icon {
    border-radius: 50%;
    width: 180rpx;
    height: 180rpx;
    
}

.user_icon_img{
    border-radius: 50%;
    width: 180rpx;
    height: 180rpx;
    /* padding-left: 30rpx; */
}

.user_info_wrap .user_img_wrap .user_info .user_name {
    margin-top: 15rpx;
    color: #fff;
    font-size: 45rpx;
}
