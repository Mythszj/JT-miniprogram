} */
.user_info_wrap .user_btn {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 850rpx;
}

.user_info_wrap .tips {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    /* transform: translate(-40rpx, -50%); */
    top: 32%;
    width: 420rpx;
    color: grey;
}

.content .mine {
    position: relative;
    margin: 45rpx 28rpx 40rpx;
    border-radius: 37rpx;
    overflow: hidden;
    box-shadow: 0 0 3rpx 3rpx rgba(0, 0, 0, 0.1);
}

.app_info_item {
    padding: 20rpx;
    height: 80rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #ccc;
}

.contact {
    padding: 20rpx;
    height: 45rpx;
    background-color: #fff;
}

.mine button {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    opacity: 0;
    margin: 0;
    padding: 0;
}