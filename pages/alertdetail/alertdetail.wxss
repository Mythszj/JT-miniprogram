page {
    background-color: #fff;
    padding: 20rpx;
    padding-top: 0;
    padding-bottom: 155rpx;
}

.empty {
    position: relative;
}

.bg {
    position: absolute;
    margin-top: 180rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 480rpx;
}

.empty .text {
    width: 575rpx;
    position: absolute;
    color: #4e936f;
    font-size: 45rpx;
    left: 50%;
    top: 680rpx;
    transform: translateX(-47%);
}

.list_item {
    position: relative;
    margin-top: 25rpx;
}

.title_area{
    display: flex;
    flex-direction: row;
    align-items: center;
}
  
.avatar{
    width: 80rpx;
    height: 80rpx;
}

.text_area {
    margin-left: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
  
.publish_time{
    font-size: 8pt;
    color: gray;
    margin-top: 1rpx;
}

.divLine{
    background: #EEEDEE;
    width: 100%;
    height: 3rpx;
}

.iconfont {
    color: #6095D0;
    /* color:#fe0000; */
    font-size: 34rpx;
}
.author_name{
    font-size:32rpx;
    font-family: FZFYSJW;
    font-weight:bold;
  }
.avatar{
    border-radius: 50%;
    width: 80rpx;
    height: 80rpx;
  }

.bottom_text {
    margin: 15rpx 20rpx;
}

.bottom_text .content {
    margin-top: 10rpx;
}

  
.content{
    padding: 9rpx;
    width: 600rpx;
    font-size: 28rpx; 
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
  }

.right_content {
    position: absolute;
    right: 15rpx;
    top: 12rpx;
    width: 130rpx;
    height: 130rpx;
    font-size: 26rpx;
    color: #908F90;
    
}

.right_text {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

.right_content .content_img {
    width: 130rpx;
    height: 130rpx;
}